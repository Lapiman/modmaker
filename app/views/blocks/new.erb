<h1>New Block</h1>

<%= form_for :block, url: mod_blocks_path do |f| %>

  <p>
    <%= f.label :blockid %><br>
    <%= f.text_field :blockid %>
  </p>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :harvest_tool %><br>
    <%= f.select :harvest_tool, options_for_select(@harvest_tools) %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>